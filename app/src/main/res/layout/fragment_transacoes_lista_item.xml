<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F3F0F8"

    >



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:focusable="true"
        android:clickable="true"
        android:background="@color/cinza"
        android:orientation="vertical"

        app:cardCornerRadius="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/item_frame"
            android:orientation="vertical"
            android:padding="10dp"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_data"
                    android:text="Data"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_valor"
                    android:text="0,00"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_funcao"
                android:text="função"
                android:visibility="gone"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_descricao"
                android:text="descrição"
                android:ellipsize="middle"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_codcategoria"
                    android:text="codigo da categoria"
                    android:visibility="gone"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_nomecategoria"
                    android:text="   categoria   "
                    android:textSize="30px"
                    android:background="@drawable/bordaarredondada"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_codconta"
                    android:text="codigo da conta"
                    android:visibility="gone"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_nomeconta"
                    android:text="   Nome da Conta   "
                    android:textSize="30px"
                    android:background="@drawable/bordaarredondada"
                    android:layout_toRightOf="@id/item_nomecategoria"
                    />


            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    </LinearLayout>
